package session4;

public class ques5 {

	public static void main(String[] args) {
		
		int n = 5;
		int nst = 9;
		int nsp = 1;
		int row = 1;
		
		while(row <= n) {
			int cst = 1;
			int csp = 1;
			while(csp <= nsp) {
				System.out.print("  ");
				csp++;
			}
			while(cst <= nst) {
				System.out.print("* ");
				cst++;
			}
			System.out.println();
			row++;
			nsp+=1;
		    nst-=2;
		}
	}

}

output 
ulta triangle
